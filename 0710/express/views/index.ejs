<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>

    </style>
</head>

<body>
    <main>
        <h3>사용자 리스트</h3>
        <ul>
            <% for(let i=0; i < users.length; i++){ %>
                <li>
                    <span>이름: <%= users[i].name %></span><br>
                    <span>성별: <%= users[i].gender %></span><br>
                    <span>전공: <%= users[i].major %></span><br>


                </li>
                <br>
                <% } %>
        </ul>

        <div>
            <form>
                <input type="text" id="username" placeholder="이름"><br><br>
                <input type="text" id="gender" placeholder="성별"><br><br>
                <input type="text" id="major" placeholder="전공"><br><br>
                <button type="button" onclick="registerFunc()">등록</button>
            </form>
        </div>
    </main>
    <script>
        function registerFunc() {
            const data = {
                name: document.querySelector('#username').value,
                gender: document.querySelector("#gender").value,
                major: document.querySelector("#major").value
            }

            axios({
                method: 'POST',
                url: '/user/register',
                data,
            }).then((res) => {
                console.log('res: ', res);
                if (res.data.result) {
                    document.location.reload();
                }
            });
        }
    </script>
</body>

</html>